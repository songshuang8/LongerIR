<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_theme_1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="@color/qmui_config_color_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/showtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="showSingle"
                app:srcCompat="@mipmap/singcol" />

            <ImageView
                android:id="@+id/type2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="showFour"
                app:srcCompat="@mipmap/fourcol"  />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/remotepic1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/remotepic2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>