<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_theme_1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_white">


        <RelativeLayout
            android:id="@+id/infolayout"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:background="#01385e"
            android:padding="20dp">


            <ImageView
                android:id="@+id/mode0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/yk_air_a" />

            <ImageView
                android:id="@+id/mode1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/mode0"
                android:layout_marginTop="15dp"
                android:background="@drawable/yk_air_s0" />

            <ImageView
                android:id="@+id/mode2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/mode1"
                android:layout_marginTop="15dp"
                android:background="@drawable/yk_air_u0" />

            <ImageView
                android:id="@+id/mode3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/mode2"
                android:layout_marginTop="15dp"
                android:background="@drawable/yk_air_l0" />

            <TextView
                android:id="@+id/wendutxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="20â„ƒ"
                android:textColor="@android:color/white"
                android:textSize="80sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/toolslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infolayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tools0"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btn_tools"
                android:tag="2"
                android:text="@string/str_ac_mode"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/tools1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btn_tools"
                android:tag="3"
                android:text="@string/str_ac_fan"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/tools2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btn_tools"
                android:tag="4"
                android:text="@string/str_ac_vane"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/tools3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btn_tools"
                android:tag="5"
                android:text="@string/str_ac_swing"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolslayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/addtemper"
                    android:layout_width="56dp"
                    android:layout_height="53dp"
                    android:background="@drawable/ctrl_ship_up"
                    android:tag="88" />

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ctrl_ship_center"
                    android:gravity="center"
                    android:text="@string/str_ac_temp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/subtemper"
                    android:layout_width="56dp"
                    android:layout_height="53dp"
                    android:background="@drawable/ctrl_ship_down"
                    android:tag="1" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_power"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:background="@drawable/btn_selected_power"
                android:tag="0" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>