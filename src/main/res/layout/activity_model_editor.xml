<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_theme_1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <clurc.net.longerir.view.ViewDragGrid
            android:id="@+id/vgv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"></clurc.net.longerir.view.ViewDragGrid>

        <LinearLayout
            android:id="@+id/pnleditor"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="46dp">

                <ImageView
                    android:id="@+id/btncircle"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/circle" />

                <ImageView
                    android:id="@+id/btnrect"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/rect" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bar_divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:onClick="ToClickName"
                    android:text="@string/str_btnname"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="ToClickName" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bar_divider" />

                <TextView
                    android:id="@+id/keyidxdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:onClick="ToClickIdx"
                    android:text="@string/str_keyidx"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnkeyidx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:onClick="ToClickIdx" />

                <View
                    android:id="@+id/split2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bar_divider" />

                <ImageView
                    android:id="@+id/btndelete"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_delete" />

                <View
                    android:id="@+id/split3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bar_divider" />

                <ImageView
                    android:id="@+id/btnappend"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_input_add" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>